{% extends 'layout.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
    <div class="container-fluid links" id="contact">
        <h2 class="contact text-center mb-5 mt-5">Contact us</h2>
        <div class="row justify-content-md-center">
            <div class="col-lg-6 mr-2 ml-2 mb-4 mt-2">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d22371.601591041093!2d-73.5906649933361!3d45.501015236415014!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x4cc91a50f1606097%3A0xb32aafdd2a7e1514!2sPlace-d&#39;Armes!5e0!3m2!1sfr!2sfr!4v1580395572912!5m2!1sfr!2sfr"
                        width="600" height="450" frameborder="0" style="border:0;" allowfullscreen=""></iframe>
            </div>

            <div class="col-lg-5 pt-5">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col">{{ form_row(form.name) }}</div>
                    <div class="col">{{ form_row(form.email) }}</div>
                </div>
                <div class="row">
                    <div class="col">{{ form_row(form.subject) }}</div>
                </div>
                <div class="row textarea">
                    <div class="col">{{ form_row(form.message) }}</div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">Send</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
