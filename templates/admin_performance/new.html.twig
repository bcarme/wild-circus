{% extends 'layoutAdmin.html.twig' %}

{% block title %}New Performance{% endblock %}

{% block body %}
<div class="container-fluid p-5">
        <h1 class="ml-1 mb-3">Add a new Performance</h1>
    <div class="container">
        <div class="col-lg-8 m-0 jumbotron">
            {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.description) }}
            {{ form_row(form.image) }}
            <button class="btn btn-primary mt-4">Add</button>
            {{ form_end(form) }}
<div class="mt-5">
    <a href="{{ path('performance_index') }}" class="btn btn-outline-dark">back to list</a>
</div>
{% endblock %}
