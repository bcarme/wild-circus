{% extends 'layoutAdmin.html.twig' %}

{% block title %}New Ticket{% endblock %}

{% block body %}
<div class="container-fluid p-5">
    <h1 class="ml-1 mb-3">Create new Ticket</h1>
    <div class="container">
        <div class="col-lg-8 m-0 jumbotron">
            {{ form_start(form) }}
            {{ form_row(form.performanceName) }}
            {{ form_row(form.date) }}
            {{ form_row(form.hour) }}
            {{ form_row(form.price) }}
            {{ form_row(form.capacityMax) }}
            <button class="btn btn-primary mt-4">Add</button>
            {{ form_end(form) }}
<div class="mt-5">
    <a href="{{ path('admin_ticket_index') }}" class="btn btn-outline-dark mt-5">back to list</a>
</div>
{% endblock %}
